
<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>All restaurants</h1>

      <ul>
        <% @restaurants.each do |restaurant| %>
          <li>
          <%= restaurant.name %>: <%= link_to "See details", restaurant_path(restaurant) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
