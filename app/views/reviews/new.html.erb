<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Leave a review to <%= @restaurant.name %> restaurant</h1>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

